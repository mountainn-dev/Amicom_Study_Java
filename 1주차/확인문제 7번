public class Ex7
{
  public static void main(String[] args)
  {
    int max=0; // 최대 값을 넣을 변수
    int[] array = {1,5,3,8,2}; // 주어진 배열
    
    for(int i=0; i<array.length; i++) //배열의 길이 만큼 반복
    {
      if(array[i] > max) 
      {
        max = array[i]; // 가장 큰 값이 생길 때 그 값을 max에 저장함. = 번거롭게 2개의 숫자를 비교할 필요가 없음
      }
    }
    
      System.out.println("max: " + max); // 최대값 출력
  }
}
